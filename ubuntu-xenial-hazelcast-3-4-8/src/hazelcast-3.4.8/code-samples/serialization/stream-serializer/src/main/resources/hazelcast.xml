<hazelcast xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.hazelcast.com/schema/config
                               http://www.hazelcast.com/schema/config/hazelcast-config-3.4.xsd"
           xmlns="http://www.hazelcast.com/schema/config">

    <serialization>
        <serializers>
            <serializer type-class="Person" class-name="PersonStreamSerializer">PersonStreamSerializer</serializer>
            <serializer type-class="Car" class-name="CarStreamSerializer">CarStreamSerializer</serializer>
            <serializer type-class="java.util.LinkedList" class-name="LinkedListStreamSerializer">LinkedListStreamSerializer</serializer>
            <serializer type-class="java.util.HashMap" class-name="HashMapStreamSerializer">HashMapStreamSerializer</serializer>
            <serializer type-class="ExtendedArrayList" class-name="ExtendedArrayListSerializer">ExtendedArrayListSerializer</serializer>
        </serializers>
    </serialization>
</hazelcast>